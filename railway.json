{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "startCommand": "uv run uvicorn src.api:app --host 0.0.0.0 --port $PORT",
        "healthcheckPath": "/api/chat/agents",
        "restartPolicyType": "ON_FAILURE"
    }
}